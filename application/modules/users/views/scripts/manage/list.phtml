<h3>Users - List</h3>

<p>
    <a href="<?php echo $this->url(array('module' => 'users', 'controller'=>'manage', 'action' => 'add'), 'default', true); ?>">Add User</a>
</p>

<?php if (count($this->paginator)): ?>
<table cellpadding="0" cellspacing="0" class="datagrid userlist">

    <thead>
        <tr>
            <th class="name">Name</th>
            <th class="email">Email</th>
            <th class="created">Created</th>
            <th class="updated">Updated</th>
            <th class="last_login">Last Logon</th>
            <th class="buttons last">&nbsp;</th>
        </tr>
    </thead>

    <tbody>
        <?php foreach ($this->paginator as $user): ?>
        <tr class="<?php echo $this->cycle(array('odd', 'even')); ?>">
            <td class="name"><?php echo $this->escape($user->firstName); ?> <?php echo $this->escape($user->lastName); ?></td>
            <td class="email"><?php echo $this->escape($user->email); ?></td>
            <td class="created"><?php echo $this->date($user->created); ?></td>
            <td class="updated"><?php echo $this->date($user->updated); ?></td>
            <td class="last_login"><?php echo $this->date($user->lastLogon, null, 'never'); ?></td>
            <td class="buttons last">
                <a href="<?php echo $this->url(array('action' => 'edit', 'id' => $user->id, 'page' => null), 'default', false); ?>"><span><span>Edit</span></span></a>
                <a href="<?php echo $this->url(array('action' => 'delete', 'id' => $user->id, 'page' => null), 'default', false); ?>" onclick="return confirm('Are you sure you want to delete this user?');"><span><span>Delete</span></span></a>
            </td>
        </tr>
        <?php endforeach; ?>
    </tbody>
</table>

<?php else: ?>
    <p>No users found</p>
<?php endif; ?>

<?php echo $this->paginationControl($this->paginator, 'Sliding', array('_pagination.phtml', 'default')); ?>

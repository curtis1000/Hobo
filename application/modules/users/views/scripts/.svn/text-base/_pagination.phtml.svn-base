<?php if ($this->pageCount): ?>
<div class="paginationControl">

<!-- Previous page link -->
<?php if (isset($this->previous)): ?>
  <a class="previous" href="<?php echo $this->url(array('page' => $this->previous)); ?>">&laquo; Previous</a>
<?php else: ?>
  <span class="previous disabled">&laquo; Previous</span>
<?php endif; ?>

<!-- First page link -->
<?php if ($this->first <= $this->firstPageInRange - 1): ?>
  <a href="<?php echo $this->url(array('page' => $this->first)); ?>">1</a>
<?php if ($this->first < $this->firstPageInRange - 1): ?>
  <span class="out_of_range">...</span>
<?php endif; ?>
<?php endif; ?>


<?php if ($this->first != $this->firstPageInRange): ?>
<?php endif; ?>

<!-- Numbered page links -->
<?php foreach ($this->pagesInRange as $page): ?>
  <?php if ($page != $this->current): ?>
    <a href="<?php echo $this->url(array('page' => $page)); ?>">
        <?php echo $page; ?>
    </a>
  <?php else: ?>
    <span class="current"><?php echo $page; ?></span>
  <?php endif; ?>
<?php endforeach; ?>

<!-- last page link -->
<?php if ($this->last >= $this->lastPageInRange + 1): ?>
<?php if ($this->last > $this->lastPageInRange + 1): ?>
    <span class="out_of_range">...</span>
<?php endif; ?>
  <a href="<?php echo $this->url(array('page' => $this->last)); ?>"><?php echo $this->last; ?></a>
<?php endif; ?>

<!-- Next page link -->
<?php if (isset($this->next)): ?>
  <a class="next" href="<?php echo $this->url(array('page' => $this->next)); ?>">Next &raquo;</a>
<?php else: ?>
  <span class="next disabled">Next &raquo;</span>
<?php endif; ?>

</div>
<div class="clear">&nbsp;</div>
<?php endif; ?>